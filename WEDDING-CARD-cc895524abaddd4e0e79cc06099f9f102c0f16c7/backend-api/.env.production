# Production Environment Configuration
# Copy this file to .env and fill in your values

# ===========================
# DATABASE (MongoDB Atlas)
# ===========================
# Get from: https://cloud.mongodb.com/ → Connect → Connect your application
MONGODB_URL=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/
DATABASE_NAME=hotel_security

# ===========================
# CACHE (Upstash Redis)
# ===========================
# Get from: https://console.upstash.com/ → Your Redis → Details
REDIS_URL=redis://default:xxxxx@xxxxx.upstash.io:6379

# ===========================
# SECURITY
# ===========================
# Generate with: openssl rand -hex 32
API_TOKEN=change-this-to-a-secure-random-token-min-32-characters
SECRET_KEY=change-this-to-a-super-secret-key-min-64-characters

# ===========================
# APPLICATION
# ===========================
APP_ENV=production
DEBUG=false

# CORS - Add your dashboard URL after deployment
# Example: https://hotel-dashboard.vercel.app
CORS_ORIGINS=http://localhost:3000

# ===========================
# EMAIL ALERTS (Optional)
# ===========================
# For Gmail: Use App Password (https://support.google.com/accounts/answer/185833)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=alerts@hotel-security.com
ALERT_EMAIL_RECIPIENTS=admin@hotel.com,security@hotel.com

# ===========================
# SLACK ALERTS (Optional)
# ===========================
# Get webhook: https://api.slack.com/messaging/webhooks
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ===========================
# BACKGROUND TASKS
# ===========================
CELERY_ENABLED=true
